[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
Wants=network-online.target
After=network-online.target

[Install]
WantedBy=multi-user.target

[Service]
Type=exec
EnvironmentFile=-/etc/default/%N
EnvironmentFile=-/etc/sysconfig/%N
EnvironmentFile=-/etc/systemd/system/k3s.service.env
User=root
Group=root
KillMode=process
Delegate=yes
# Having non-zero Limit*s causes performance problems due to accounting overhead
# in the kernel. We recommend using cgroups to do container-local accounting.
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s
ExecStartPre=/bin/sh -xc '! /usr/bin/systemctl is-enabled --quiet nm-cloud-setup.service'
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
{% if 'k3s_master' in group_names %}
ExecStart=/usr/bin/k3s --data-dir {{ k3s_data_dir }} server --snapshotter {{ k3s_snapshotter }}
{% else %}
{% set k3s_server_url = 'https://' + hostvars[groups['k3s_master'][0]]['ansible_host'] + ':6443' %}
{% set k3s_server_token = hostvars[groups['k3s_master'][0]]['token'] %}
ExecStart=/usr/bin/k3s --data-dir {{ k3s_data_dir }} agent -s {{ k3s_server_url }} -t {{ k3s_server_token }} --snapshotter {{ k3s_snapshotter }}
{% endif %}
